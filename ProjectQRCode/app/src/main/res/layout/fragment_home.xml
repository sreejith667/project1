<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/final_white"
    android:layout_height="match_parent"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/blackback"
        android:padding="10dp"
        app:cardBackgroundColor="#050505"
        app:cardCornerRadius="15dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/newvehicle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/edittext"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:text="New Vehicle"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/myvehicles"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/edittext"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:text="My Vehicles"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/edittext"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:text="Balance"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recharge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/edittext"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:text="Recharge"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dashboard"
            android:layout_width="294dp"
            android:layout_height="59dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:text="Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:text="History"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/changepassword"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>